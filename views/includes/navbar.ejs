<style>
    .btn-search {
        background-color: #fe424d;
        color: white;
        border-radius: 40px;
        width: 100px;
        border: none;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 0.5rem;
        font-size: 0.9rem;
    }
    .btn-search:hover {
        background-color: #e63946;
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(254, 66, 77, 0.3);
    }
    .btn-search i {
        margin-right: 0.25rem;
    }
    .btn-search p {
        margin: 0;
        font-weight: 500;
    }
    .search-input {
        border-radius: 40px;
        width: 300px;
        border: 2px solid #ddd;
        transition: all 0.3s ease;
        padding: 0.5rem 1rem;
    }
    .search-input:focus {
        border-color: #fe424d;
        box-shadow: 0 0 0 0.2rem rgba(254, 66, 77, 0.25);
        outline: none;
    }
    .input-group .btn-light {
        border-radius: 50%;
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #f8f9fa;
        border: 1px solid #ddd;
        color: #6c757d;
        text-decoration: none;
        transition: all 0.3s ease;
        margin-left: 0.5rem;
    }
    .input-group .btn-light:hover {
        background-color: #e9ecef;
        color: #495057;
        transform: scale(1.1);
    }
    @media (max-width: 768px) {
        .search-input {
            width: 200px;
        }
        .btn-search {
            width: 80px;
            font-size: 0.8rem;
        }
        .btn-search p {
            display: none;
        }
        .btn-search i {
            margin-right: 0;
        }
    }
</style>

