<% layout("/layouts/boilerplate") %>
    

    <div class="row">
        <div class="col-8 offset-3">
            <h3 class="mt-2 md-2">Lisitng Details</h3>
        </div>
        <div class="card col-6 offset-3 show-card">
            <img src="<%=listing.image.url%>" class="card-img-top show-img" alt="listing_img">
            <div class="card-body">
                <p class="card-text">
                <ul class="mb-2">
                    <li><b>
                            <%= listing.title %>
                        </b></li>
                    <li>
                        <%= listing.description %>
                    </li>
                    <li>&#8377;<%= listing.price.toLocaleString("en-IN") %> / night</li>
                    <li>
                        <%= listing.location%>
                    </li>
                    <li>
                        <%= listing.country %>
                    </li>
                </ul>
                </p>
            </div>
        </div>

        <div class="offset-0 btns">
            <a href="/listings/<%= listing._id %>/edit " class="btn btn-dark mb-3 col-1 offset-3">Edit</a>
            <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE" onsubmit="return confirmDelete()">
                <button type="submit" class="btn btn-dark mb-3 offset-5">Delete</button>
            </form>
        </div>
    </div>
    <script>
  function confirmDelete() {
    return confirm("Are you sure you want to delete this listing?");
  }
</script>